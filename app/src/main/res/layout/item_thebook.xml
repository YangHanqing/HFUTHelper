<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">
    <TextView
        android:id="@+id/tv_theBook_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_theBook_location"
            android:text="翡翠湖校区—新区教学参考阅览室"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_theBook_bookId"
            android:text="02047452"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_theBook_barCode"
            android:layout_weight="1"
            android:text="索书号 :29.203/0217=3 "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="可借"
            android:id="@+id/tv_theBook_state"
            android:textStyle="bold"
            android:textColor="#458B00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>